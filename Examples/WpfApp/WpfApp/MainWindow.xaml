<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        xmlns:WPFMatlabPlotter="clr-namespace:WPFMatlabPlotter;assembly=WPFMatlabPlotter"
        mc:Ignorable="d"
        Title="WPFMatlabPlotterExample" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <WPFMatlabPlotter:MatlabPlot x:Name="MainPlot" Width="300" Height="300" Margin="10" BorderBrush="Black" BorderThickness="1"/>
            <Button Content="Build/Destroy graph" Click="Button_Click" Width="300" Height="50"/>
        </StackPanel>
    </Grid>
</Window>
